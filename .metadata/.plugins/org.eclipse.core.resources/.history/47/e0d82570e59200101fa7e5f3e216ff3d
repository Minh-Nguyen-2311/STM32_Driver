#ifndef SRC_BUFFER_DAC_PROCESS_H_
#define SRC_BUFFER_DAC_PROCESS_H_

#include "OOP.h"
#include "main.h"
#include "SineWave.h"

typedef struct
{
	OOP super;

	uint8_t ID_Signal;

	uint8_t CAN_predata[4];
	uint8_t CAN_currdata[4];

	uint8_t mode;
	uint8_t num_can;
}CAN_st;

void CAN_buf_ctor(CAN_st * const me, void *data, uint8_t ID_Signal, uint8_t num_can);

extern DAC_HandleTypeDef hdac;
extern DMA_HandleTypeDef hdma_dac1;
extern TIM_HandleTypeDef htim6;


#endif /* SRC_BUFFER_DAC_PROCESS_H_ */
