#include "USART_LCD.h"

static uint8_t LCD_Init_(Console const * const me);
static void LCD_Process_(Console const * const me);

void LCD_buf_ctor(USART_LCD_st * const me, void *data, uint8_t ID_Signal, uint8_t mode, uint8_t num_lcd)
{
	static struct ConsoleVtbl const vtbl = {
			/* vtbl of the ADC class */
			&LCD_Init_,
			&LCD_Process_
	};

	OOP_ctor(&me->super, data); /* call superclass' ctor */

	me->super.vptr = &vtbl;  /* override the vptr */
	me->super.data = NULL;

	me->ID_tinhieu = ID_tinhieu;
	me->len = 8;
	me->format_lcd.mode = mode;
	me->num_lcd = number_lcd;

	me->Nextion_predata = 0;
	me->Nextion_currdata = 0;

	me->Waveshare_predata = 0;
	me->Waveshare_currdata = 0;

	me->Amp_predata = 0;
	me->Amp_currdata = 0;

	me->flagWaveShare = 0;
}
