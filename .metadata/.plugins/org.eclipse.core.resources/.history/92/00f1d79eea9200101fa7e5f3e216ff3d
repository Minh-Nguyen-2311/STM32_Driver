#include "OOP.h"
#include "OOP_Console.h"
#include "DAC_Process.h"

#define NUM_DAC 4

DAC_st Dac[NUM_DAC];

OOP const *consoles[] =
{
	&Can[0].super,	&Can[1].super,	&Can[2].super,	&Can[3].super
};

void User_ctor(infor_console* console)
{
	CAN_buf_ctor(&Can[0], NULL, 1, 0);
	CAN_buf_ctor(&Can[1], NULL, 2, 1);
	CAN_buf_ctor(&Can[2], NULL, 3, 2);
	CAN_buf_ctor(&Can[3], NULL, 4, 3);

	console->NumberOfDevices = sizeof(consoles)/sizeof(OOP*);
	console->num_can = NUM_CAN;
	console->pCAN = Can;
	InitAll(consoles, console->NumberOfDevices);
}
