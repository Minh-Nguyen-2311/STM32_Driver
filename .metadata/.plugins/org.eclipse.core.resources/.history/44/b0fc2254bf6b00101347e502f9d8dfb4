#ifndef SRC_BUFFER_USART_LCD_H_
#define SRC_BUFFER_USART_LCD_H_

#include "OOP.h"
#include "main.h"
#include "Nextion_LCD.h"

typedef struct
{
	OOP super;
	uint8_t ID_Signal;
	uint32_t Nextion_predata[4];
	uint32_t Nextion_currdata[4];
	uint8_t num_lcd;
}USART_LCD_st;

void LCD_buf_ctor(USART_LCD_st * const me, void *data, uint8_t ID_Signal, uint8_t num_lcd);

#endif /* SRC_BUFFER_USART_LCD_H_ */
